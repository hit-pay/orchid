{
  "name": "orchidui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "dev": "storybook dev -p 6006",
    "dev:landing": "vite dev",
    "build:landing": "vite build",
    "build:storybook": "storybook build -o public/storybook",
    "build:core": "cd packages/core && npm run build",
    "build:dashboard": "npm install && cd packages/dashboard && npm run build",
    "build": "npm run build:core && npm run build:dashboard && npm install && npm run build:storybook && npm run build:landing",
    "publish:core": "npm run build:core && cd packages/core && npm publish",
    "publish:dashboard": "npm run build:dashboard && cd packages/dashboard && npm publish",
    "publish-dev:core": "npm run build:core && cd packages/core && npm publish --tag beta",
    "publish-dev:dashboard": "npm run build:dashboard && cd packages/dashboard && npm publish --tag beta",
    "release-prod": "bun run release-prod.js",
    "release": "bun run release-dev.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vueuse/core": "^13.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "flag-icons": "^6.11.1",
    "libphonenumber-js": "^1.10.51",
    "lodash-es": "^4.17.21",
    "lottie-web": "^5.12.2",
    "lucide-vue-next": "^0.513.0",
    "quill": "^2.0.3",
    "quill-better-table": "^1.2.10",
    "reka-ui": "^2.3.1",
    "shikiji": "^0.9.18",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "v-calendar": "^3.1.2",
    "vue-advanced-cropper": "^2.8.8",
    "vue-draggable-next": "^2.2.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.12",
    "@storybook/addon-interactions": "^7.6.12",
    "@storybook/addon-links": "^7.6.12",
    "@storybook/blocks": "^7.6.12",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.6.12",
    "@storybook/vue3-vite": "^7.6.12",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "sass": "^1.68.0",
    "storybook": "^7.6.15",
    "storybook-addon-root-attribute": "^1.0.2",
    "tailwindcss": "^3.4.3",
    "vite": "^5.4.11",
    "vue": "^3.3.4"
  }
}
