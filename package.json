{
  "name": "orchid",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build -o public/storybook",
    "astro": "astro",
    "dev:playground": "astro dev",
    "build": "npm run build-storybook && astro build",
    "preview": "astro build && npm run build-storybook && astro preview",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "publish": "cd packages/@orchidui-vue && npm run build && npm version patch && npm publish"
  },
  "dependencies": {
    "@astrojs/vue": "^3.0.3",
    "@orchidui/vue": "^0.1.70",
    "@popperjs/core": "^2.11.8",
    "dayjs": "^1.11.10",
    "flag-icons": "^6.11.1",
    "replace-in-file": "^7.0.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-interactions": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/blocks": "^7.5.2",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.5.2",
    "@storybook/vue3-vite": "^7.5.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "astro": "^3.4.3",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "sass": "^1.68.0",
    "storybook": "^7.5.2",
    "storybook-addon-root-attribute": "^1.0.2",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5",
    "vue": "^3.3.4"
  }
}
