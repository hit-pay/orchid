{
  "name": "orchidui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "dev": "storybook dev -p 6006",
    "dev:landing": "vite dev",
    "build:landing": "vite build",
    "build:storybook": "storybook build -o public/storybook",
    "build:core": "cd packages/vue-core && npm run build",
    "build:dashboard": "cd packages/vue-dashboard && npm run build",
    "build": "npm run build:core && npm run build:dashboard && npm run build:storybook && npm run build:landing",
    "publish:core-package": "npm run build:core && cd packages/vue-core && npm version patch && npm publish",
    "publish:dashboard-package": "npm run build:dashboard && cd packages/vue-dashboard && npm version patch && npm publish",
    "publish": "npm run publish:core-package && npm run publish:dashboard-package"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "esbuild": "^0.20.1",
    "flag-icons": "^6.11.1",
    "libphonenumber-js": "^1.10.51",
    "lodash-es": "^4.17.21",
    "quill": "^2.0.0-rc.0",
    "shikiji": "^0.9.18",
    "v-calendar": "^3.1.2",
    "vue-advanced-cropper": "^2.8.8",
    "vue-draggable-next": "^2.2.1",
    "vue3-colorpicker": "^2.2.3"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.12",
    "@storybook/addon-interactions": "^7.6.12",
    "@storybook/addon-links": "^7.6.12",
    "@storybook/blocks": "^7.6.12",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.6.12",
    "@storybook/vue3-vite": "^7.6.12",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "sass": "^1.68.0",
    "shikiji": "^0.9.10",
    "storybook": "^7.6.15",
    "storybook-addon-root-attribute": "^1.0.2",
    "tailwindcss": "^3.4.3",
    "vite": "^5.4.11",
    "vue": "^3.3.4"
  }
}
