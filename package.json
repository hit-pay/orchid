{
  "name": "orchidui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "dev": "storybook dev -p 6006",
    "dev:landing": "vite dev",
    "build:landing": "vite build",
    "build:storybook": "storybook build -o public/storybook",
    "build:core": "cd packages/core && npm run build",
    "build:dashboard": "cd packages/dashboard && npm run build",
    "build": "npm run build:core && npm run build:dashboard && npm run build:storybook && npm run build:landing",
    "publish:core": "npm run build:core && cd packages/core && npm publish",
    "publish:dashboard": "npm run build:dashboard && cd packages/dashboard && npm publish",
    "publish-dev:core": "npm run build:core && cd packages/core && npm publish --tag beta",
    "publish-dev:dashboard": "npm run build:dashboard && cd packages/dashboard && npm publish --tag beta",
    "release-prod": "bun run release-prod.js",
    "release": "bun run release-dev.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vueuse/core": "^13.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "flag-icons": "^6.15.0",
    "libphonenumber-js": "^1.12.9",
    "lodash-es": "^4.17.21",
    "lottie-web": "^5.13.0",
    "lucide-vue-next": "^0.514.0",
    "quill": "^2.0.3",
    "quill-better-table": "^1.2.10",
    "reka-ui": "^2.3.1",
    "shiki": "^3.6.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "v-calendar": "^3.1.2",
    "vue-advanced-cropper": "^2.8.9",
    "vue-draggable-next": "^2.2.1",
    "vue-tsc": "^2.2.10"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.33.0",
    "fast-glob": "^3.3.3",
    "postcss": "^8.5.4",
    "postcss-import": "^15.1.0",
    "sass": "^1.89.2",
    "storybook": "^8.6.14",
    "storybook-addon-root-attribute": "^1.0.2",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "vue": "^3.5.16"
  }
}
