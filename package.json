{
  "name": "orchidui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "dev": "storybook dev -p 6006",
    "dev:landing": "vite dev",
    "build:landing": "vite build",
    "build:storybook": "storybook build -o public/storybook",
    "build:core": "cd packages/core && npm run build",
    "build:dashboard": "npm install && cd packages/dashboard && npm run build",
    "build": "npm run build:core && npm run build:dashboard && npm install && npm run build:storybook && npm run build:landing",
    "publish-dev:core": "npm run build:core && cd packages/core && npm publish --tag beta",
    "publish-dev:dashboard": "npm run build:dashboard && cd packages/dashboard && npm publish --tag beta",
    "release": "bun run release.js"
  },
  "dependencies": {
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "sass": "^1.68.0",
    "storybook": "^8.6.14",
    "storybook-addon-root-attribute": "^1.0.2",
    "tailwindcss": "^3.4.3",
    "vite": "^6.3.5",
    "vue": "^3.3.4"
  }
}
